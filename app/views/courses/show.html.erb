<% provide(:title, "Course") %>
<h2><%= @course.name %></h2>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Course ID</th>
        <th>Time</th>
        <th>Period</th>
        <th>Section</th>
        <th>Created</th>
        <th>Number of Students</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @course.name %></td>
        <td><%= @course.id %></td>
        <td><%= @course.time %></td>
        <td><%= @course.period %></td>
        <td><%= @course.section %></td>
        <td><%= @course.created_at %></td>
        <td><%= @course.students.all.count %></td>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-primary " %> <br /><br />
<%= link_to 'Delete Course', course_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "btn btn-primary " %> <br /><br />
<h3>Enrolled Students</h3>
<div class="table-responsive">
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Grade Level</th>
      <th>Average</th>
      <% @course.assignments.each do |assignment| %>
      <th><%= assignment.title %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @course.students.each do |student| %>
      <tr>
        <td><%= link_to student.first_name, student %></td>
        <td><%= student.last_name %></td>
        <td><%= student.grade_level %></td>
        <td>Average<td>
        <% @course.assignments.each do |assignment| %>
        <td><%= link_to 'Add Grade', new_grade_route(@course.id, student.id, assignment.id) %></td>
        <% end %>
    <% end %>
      </tr>
</tbody>
</table>
</div>

<%= link_to "Create New Assignment", new_course_assignment_route(@course.id), class: "btn btn-danger" %> <br /><br />

<%= link_to "Create and Enroll New Student", new_enroll_student_route(@course.id), class: "btn btn-info" %> <br /><br />

<%= link_to "Enroll Existing Student", new_course_enrollment_path, class: "btn btn-success" %> <br /><br />

<%= link_to 'Back to Courses List', courses_path, class: "btn btn-primary " %><br /><br />
