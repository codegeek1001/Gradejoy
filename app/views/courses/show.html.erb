<% provide(:title, "Course") %>
<h2><%= @course.name %></h2>

<%= render 'current_course_table' %>

<%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-primary " %>

&nbsp  &nbsp<%= link_to 'Delete Course', course_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "btn btn-primary " %> <br /><br />

<h3>Enrolled Students</h3>

<%= render 'main_table' %>

<div id="assignments" style="display:none"></div>

<div id="assignment_form" style="display:none"></div>

<br />
<%= link_to "Create New Assignment", new_course_assignment_route(@course.id), class: "btn btn-danger", remote: true %> &nbsp  &nbsp

<%= link_to "Create and Enroll New Student", new_enroll_student_route(@course.id), class: "btn btn-info" %> &nbsp  &nbsp

<%= link_to "Enroll Existing Student", new_course_enrollment_path, class: "btn btn-success" %> &nbsp  &nbsp

<%= link_to 'Back to Courses List', courses_path, class: "btn btn-primary " %>&nbsp  &nbsp
