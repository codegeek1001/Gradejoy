<% provide(:title, "Course") %>

<h2 class="course_title" id="course_name"><%= @course.name %></h2>
<h2 id="course_name_change" class="course_title"></h2>
<%= link_to "Show Details", course_path, class: "btn btn-xs btn-success course_title", id:"course_details", remote: true %></h2>

<br />
<br />

<%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-primary", id: "edit_course", remote: true %>

&nbsp  &nbsp<%= link_to 'Delete Course', course_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "btn btn-primary" %> <br /><br />

<div id="current_course_table"></div>

<div id="updated_course"></div>

<div id="course_form"></div>

<h3>Enrolled Students</h3>

<%= render 'main_table' %>

<div id="updated_main_table"></div>

<div id="student_buttons"></div>
<br />
<div id="edit_student_form"></div>

<div id="edit_assignment_form"></div>

<div id="create_course_assignment_form"></div>

<div id="enroll_form"></div>

<div id="edit_grade_form"></div>

<div id="add_grade_form"></div>

<br />
<%= link_to "Create New Assignment", new_course_assignment_route(@course.id), class: "btn btn-danger", id: "create_course_assignment", remote: true %> <br /><br />

<%= link_to "Assignment Categories", categories_path, class: "btn btn-success" %> (Feature in progress)<br /><br />

<%= link_to "Create and Enroll New Student", new_enroll_student_route(@course.id), class: "btn btn-info", id: "enroll_student", remote: true %> <br /><br />

