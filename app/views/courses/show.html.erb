<% provide(:title, "Course") %>

<h2><%= @course.name %> <%= link_to "Show Details", course_path, class: "btn btn-xs btn-success", id:"show_button", remote: true %></h2>
<br />
<br />
<div id="current_course_table"></div>

<div id="updated_course"></div>

<div id="course_form"></div>

<%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-primary", remote: true %>

&nbsp  &nbsp<%= link_to 'Delete Course', course_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "btn btn-primary" %> <br /><br />

<h3>Enrolled Students</h3>

<%= render 'main_table' %>

<div id="assignments"></div>

<div id="assignment_form"></div>

<div id="assignment_buttons"></div>

<div id="enroll_form"></div>

<div id="grade_form"></div>

<br />
<%= link_to "Create New Assignment", new_course_assignment_route(@course.id), class: "btn btn-danger", remote: true %> <br /><br />

<%= link_to "Create and Enroll New Student", new_enroll_student_route(@course.id), class: "btn btn-info", remote: true %> <br /><br />

<%= link_to 'Back to Courses List', courses_path, class: "btn btn-primary" %>
