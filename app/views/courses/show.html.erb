<h2><%= @course.name %></h2>
<ul>
  <li><strong>Time:</strong> <%= handle_not_set @course.time %></li>
  <li><strong>Period:</strong> <%= handle_not_set @course.period %></li>
  <li><strong>Section:</strong> <%= handle_not_set @course.section %></li>
</ul>

<%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-primary btn-med" %> <br /><br />
<%= link_to 'Delete Course', course_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: "btn btn-primary btn-med" %> <br /><br />
<%= link_to 'Back to Courses List', courses_path, class: "btn btn-primary btn-med" %><br /><br />
<h3>Enrolled Students</h3>
<div class="table-responsive">
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Grade Level</th>
      <% @assignments.each do |assignment| %>
      <th><%= assignment.title %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @course.students.each do |student| %>
    <tr>
      <td><%= link_to student.first_name, course.student %></td>
      <td><%= student.last_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
