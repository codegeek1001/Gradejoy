<h2><%= @course.name %></h2>
<ul>
  <li><strong>Time:</strong> <%= handle_not_set @course.time %></li>
  <li><strong>Period:</strong> <%= handle_not_set @course.period %></li>
</ul>

<%= link_to 'Edit Course', edit_course_path(@course) %> <br /><br />
<%= link_to 'Delete Course', course_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' } %> <br /><br />
<%= link_to 'Back to Courses List', courses_path %><br /><br />
<h3>Enrolled Students</h3>


<table>
  <thead>
    <tr>
      <th>Student Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @course.students.each do |student| %>
    <tr>
      <td><%= link_to 'Show', student %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Student', new_student_path %> <br /><br />
