<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<%if user_signed_in? %>
  <% provide(:title, "Courses") %>
  <h2>Gradebook</h2>
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Course Name</th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.name, course %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'Create New Course', new_course_path, class: "btn btn-primary " %> <br /><br />

  <%= link_to 'Create New Student', new_student_path, class: "btn btn-success " %> <br /><br />

  <%= link_to 'View Created Students', students_path, class: "btn btn-success " %> <br /><br />

  <%= link_to "Create New Assignment", new_assignment_path, class: "btn btn-danger " %> <br /><br />

  <%= link_to "View Created Assignments", assignments_path, class: "btn btn-danger " %> <br /><br />

  <%= link_to "Create Course Enrollment", new_course_enrollment_path, class: "btn btn-info" %><br /><br />

  <%= link_to "View Course Enrollments", course_enrollments_path, class: "btn btn-info" %><br /><br />
<% else %>
<% provide(:title, "Home") %>
  <div class="jumbotron">
    <h2>Experience Gradejoy.</h2>
    <br />
    <p class="lead">Gradejoy is a simple, intuitive, and easy-to-use gradebook application for teachers and students.</p>
    <br />
    <h4>Begin by clicking "Login or Sign up" at the top right of the page.</h4>
    <h4>This application is still under construction. Many features are still in progress.</h4>
  </div>
<% end %>
