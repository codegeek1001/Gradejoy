<% provide(:title, "Assignment") %>
<h2><%= @assignment.name %></h2>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date Created</th>
        <th>Date Due</th>
        <th>Category</th>
        <th>Total Points</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @assignment.name %></td>
        <td><%= @assignment.created_at.strftime("%A, %B %d, %Y, at %I:%M %p") %></td>
        <td><%= @assignment.date_due.strftime("%A, %B %d, %Y, at %I:%M %p")%></td>
        <td><%= @assignment.category %></td>
        <td><%= @assignment.total_points %></td>
      </tr>
    </tbody>
  </table>
</div>
<br />

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Course</th>
        <th>Date Added To Course</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% CourseAssignment.where(assignment: @assignment).each do |course_assignment| %>
          <td><%= course_assignment.course.name %></td>
          <td><%= course_assignment.created_at.strftime("%A, %B %d, %Y, at %I:%M %p") %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
<br />

<%= link_to 'Delete Assignment', assignment_path, method: :delete, data: { confirm: 'Are you sure you want to delete this assignment?' }, class: "btn btn-danger" %> <br /><br />
<%= link_to 'Edit Assignment', edit_assignment_path(@assignment), class: "btn btn-primary" %><br /><br />
<%= link_to 'Back to Assignments', assignments_path, class: "btn btn-info" %>
