<% provide(:title, "Course Enrollment") %>
<h3><%= @course_enrollment.id %></h3>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Course ID</th>
        <th>Enrollment ID</th>
        <th>Student First Name</th>
        <th>Student Last Name</th>
        <th>Course Name</th>
    </thead>

    <tbody>
      <tr>
        <td><%= @course_enrollment.student_id %></td>
        <td><%= @course_enrollment.course_id %></td>
        <td><%= @course_enrollment.id %></td>
        <td><%= @course_enrollment.student.first_name %></td>
        <td><%= @course_enrollment.student.last_name %></td>
        <td><%= @course_enrollment.course.name %></td>
      </tr>
    </tbody>
  </table>
</div>

<%= link_to 'Edit Course Enrollment', edit_course_enrollment_path(@course_enrollment), class: "btn btn-primary" %><br /><br />
<%= link_to 'Delete Course Enrollment', course_enrollment_path, method: :delete, data: { confirm: 'Are you sure you want to delete this course enrollment?' }, class: "btn btn-primary" %><br /><br />
<%= link_to 'Back to Enrollments', course_enrollments_path,  class: "btn btn-primary" %>
